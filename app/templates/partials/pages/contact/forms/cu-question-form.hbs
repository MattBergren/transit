            {{/if}}

            {{#unless ship}}
            <div class="field">
              <p class="margin-extra-small">Membership ID:</p>
              <p class="bold margin-none">123456789</p>
            </div>

            <div class="field">
              <p class="margin-extra-small">First Name:</p>
              <p class="bold margin-none">John</p>
            </div>

            <div class="field">
              <p class="margin-extra-small">Last Name:</p>
              <p class="bold margin-none">Doe</p>
            </div>

            <div class="field">
              <p class="margin-extra-small">Email Address:</p>
              <p class="bold margin-extra-small">johndoe@gmail.com</p>
              <a href="#" id="add-alt-email">+ Add an Alternate Email Address</a>
            </div>

            <div id="alt-email-wrapper" class="hidden">
              <div class="field">
                <label for="question-alt-email">Alternate Email Address</label>
                <div class="field-input">
                  <input type="text" name="question-alt-email" id="question-alt-email">
                </div>
              </div>
              <div class="field">
                <label for="question-alt-email-confirm">Confirm Alternate Email Address</label>
                <div class="field-input">
                  <input type="text" name="question-alt-email-confirm" id="question-alt-email-confirm">
                </div>
              </div>
            </div>

            <div class="field">
              <p class="margin-extra-small">Date of Birth:</p>
              <p class="bold margin-none">XX/XX/XXXX</p>
            </div>

            <div class="field">
              <p class="margin-extra-small">Phone Number:</p>
              <p class="bold margin-extra-small">763-555-5555</p>
              <a href="#" id="add-alt-phone">+ Add an Alternate Phone Number</a>
            </div>

            <div id="alt-phone-wrapper" class="hidden">
              <div class="field">
                <label for="question-alt-phone">Alternate Phone Number</label>
                <div class="field-input">
                  <input type="text" name="question-alt-phone" id="question-alt-phone">
                </div>
              </div>
              <div class="field">
                <label for="question-alt-phone-confirm">Confirm Alternate Phone Number</label>

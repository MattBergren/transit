            {{/unless}}

            <button type="submit" name="question-submit" class="btn btn--center margin-small" id="question-submit"><span class="btn--primary">Submit Question</span></button>
            <a href="#" class="display-block align-center" id="question-cancel">Cancel</a>
          </fieldset>
        </form>
      </div>

      <div class="card-slide" aria-hidden="true">
        {{#if variation}}
        <div class="message-block--full-width success margin-none variation-el">
          <div class="message-block-header">
            <span class="color-green-dark bold">Your Request has Been Received</span>
          </div>
          <div class="message-block-body">
            <p class="margin-small">Thank you. We value your input, and will be happy to answer your questions. A Customer Service representative will review your question and respond to you shortly.</p>
          </div>
        </div>
        {{/if}}
        {{#if variation}}<div class="variation-orig">{{/if}}
          <p class="color-green-dark bold">{{> check }} Your request has been received</p>
          <p class="margin-small">Thank you. We value your input, and will be happy to answer your questions. A Customer Service representative will review your question and respond to you shortly.</p>
        {{#if variation}}</div>{{/if}}
      </div>
    </div>
  </div>
</div>

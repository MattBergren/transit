<div class="card-animation-wrapper">
  <div class="card match-height-once">
    <div class="card-header">
      <p class="subtitle semi-bold">Send Us a Question</p>
      <p class="margin-small">Fill out our online contact form and we will respond to you by phone, e-mail, or mailing address depending on the nature of your inquiry.</p>
    </div>
    <div class="card-body">
      <div class="card-slide" aria-hidden="false">
        <a href="#" class="btn btn--primary" id="question-btn">Fill Out Contact Form</a>
      </div>

      <div class="card-slide" aria-hidden="true">
        <form id="question-form">
          <fieldset>
            <legend class="sr-only">Send Us a Question</legend>
            <div class="field">
              <label for="question-about">I Have a Question About:</label>
              <div class="field-input">
                <div class="select--regular">
                  <select name="question-about" id="question-about">
                    <option value="Pharmacy (Rx) Benefits">Pharmacy (Rx) Benefits</option>
                    <option value="Finding a Physician or Provider">Finding a Physician or Provider</option>
                    <option value="Finding a Pharmacy">Finding a Pharmacy</option>
                    <option value="Updating Member information">Updating Member information</option>
                    <option value="Billing Information">Billing Information</option>
                    <option value="Payment Information">Payment Information</option>
                    <option value="Other">Other</option>
                  </select>
                </div>
              </div>
            </div>

            <div class="field ask-question-message">
              <label for="question-message">Message:</label>
              <div class="field-input">
                <textarea name="question-message" id="question-message" maxlength="1000"></textarea>
                <p class="display-block align-right color-gray">Characters left: <span class="message-count">1000</span></p>
              </div>
            </div>

            {{#if ship}}
            <div class="field">
              <label for="question-member-number" class="display-inline-block" data-tooltip="aarp-card">AARP Membership Number:</label>
              <div class="field-input">
                <input type="number" name="question-member-number" id="question-member-number">
              </div>
            </div>

            <div class="field">
              <label for="question-first-name">First Name:</label>
              <div class="field-input">
                <input type="text" name="question-first-name" id="question-first-name">
              </div>
            </div>

            <div class="field">
              <label for="question-last-name">Last Name:</label>
              <div class="field-input">
                <input type="text" name="question-last-name" id="question-last-name">
              </div>
            </div>

            <div class="field">
              <label for="question-email">Email Address:</label>
              <div class="field-input">
                <input type="text" name="question-email" id="question-email">
              </div>
            </div>

            <div class="field margin-small">
              <label for="question-email-confirm">Confirm Email Address:</label>
              <div class="field-input">
                <input type="text" name="question-email-confirm" id="question-email-confirm">
              </div>
            </div>

            <fieldset class="margin-large">
              <legend>Date of Birth:</legend>
              <div class="field--dob short">
              	<div class="field-input">
              	  <select name="dob-mm" id="date-mm" style="width: 100%"><option value=""></option></select>
              	  <label for="date-mm">MM</label>
              	</div>
              	<div class="field-input">
              	  <select name="dob-dd" id="date-dd" style="width: 100%"><option value=""></option></select>
              	  <label for="date-dd">DD</label>
              	</div>
              	<div class="field-input">
              	  <select name="dob-yyyy" id="date-yyyy" style="width: 100%"><option value=""></option></select>
              	  <label for="date-yyyy">YYYY</label>
              	</div>
              </div>
            </fieldset>


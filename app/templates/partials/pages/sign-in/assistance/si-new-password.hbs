<div class="container--base gray">
  <div class="container">
    <div class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="card">
          <div class="card-body">
            <p class="margin-large">Pariatur veniam exercitation consectetur ex sint commodo Lorem magna non Culpa culpa consectetur duis quis ut in magna ad proident deserunt duis dolore.</p>
            <form id="sign-in-form">
              {{#if variation}}<p class="margin-large"><span class="bold">Your Username:</span> &lt;username&gt;</p>{{/if}}
                <div class="field">
                  <label for="password">Password:</label>
                  <div class="field-input">
                    <input type="password" name="password" id="password" class="tooltip-password">
                  </div>
                </div>
                <div class="field margin-large">
                  <label for="password-confirm">Confirm Password:</label>
                  <div class="field-input">
                    <input type="password" name="password-confirm" id="password-confirm">
                  </div>
                </div>
                <div class="btn-group">
                  <a href="#" class="btn btn--secondary">Cancel</a>
                  <button class="btn" id="change-password-btn"><span class="btn btn--primary">Submit</span></button>
                </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

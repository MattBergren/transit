<section class="container--base gray">
  <div class="container">
    <div class="row">
      {{!-- Start: section header --}}
      <div class="col-md-8 margin-small">
        <h2 class="h3 medium margin-small">Optional Service Benefits (Riders)</h2>
        <p>
          Labore minim exercitation id ut adipisicing aliquip ea pariatur adipisicing pariatur magna.
          Exercitation laboris labore exercitation elit fugiat occaecat Lorem elit eu.
        </p>
      </div>
    </div>
    <hr style="margin-top: 0;">
    {{!-- Start: active riders --}}
    <div class="row">
      <div class="col-md-3">
        <h3 class="h4 color-blue medium margin-small">My Riders</h3>
        <p class="margin-none">
          These are riders you've selected as part of your plan coverage lorem ipusm.
        </p>
      </div>
      <div class="col-md-9">
        <div class="row">
          {{!-- Active rider 1 --}}
          <div class="col-md-6">
            {{> card--rider BC-ma.cards.active-rider-1 attribute='match-height-rider'}}
          </div>
          {{#unless variation}}
          {{!-- Active rider 2 --}}
          <div class="col-md-6">
            {{> card--rider BC-ma.cards.active-rider-2 attribute='match-height-rider'}}
          </div>
          {{/unless}}
        </div>
      </div>
    </div>
    <hr style="margin-top: 0;">
    {{!-- Start: available riders --}}
    <div class="row">
      <div class="col-md-3">
        <h3 class="h4 color-blue medium margin-small" id="avail-riders">Available Riders</h3>
        <p class="margin-none">
          These are additional riders that you can choose to add to your plan lorem ipsum.
        </p>
      </div>
      <div class="col-md-9">
        <div class="row">
          {{!-- Available rider 1 --}}
          <div class="col-md-6">
            {{#unless variation}}
            {{> card--rider BC-ma.cards.available-rider-1 attribute='match-height-rider'}}
            {{else}}
            {{> card--rider BC-ma.cards.active-rider-2 attribute='match-height-rider' variation="true" force-add="true"}}
            {{/unless}}
          </div>
          {{!-- Available rider 2 --}}
          <div class="col-md-6">
            {{#unless variation}}
            {{> card--rider BC-ma.cards.available-rider-2 attribute='match-height-rider'}}
            {{else}}
            {{> card--rider BC-ma.cards.available-rider-2 attribute='match-height-rider' variation="true"}}
            {{/unless}}
          </div>
        </div>
      </div>
    </div>
    <div class="row">
      {{!-- Available rider 3 --}}
      <div class="col-md-9 col-md-offset-3">
        <div class="row">
          <div class="col-md-6">
            {{#unless variation}}
            {{> card--rider BC-ma.cards.available-rider-3 attribute='match-height-rider'}}
            {{else}}
            {{> card--rider BC-ma.cards.available-rider-3 attribute='match-height-rider' variation="true"}}
            {{/unless}}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
